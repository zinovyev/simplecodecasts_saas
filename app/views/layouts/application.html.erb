<!DOCTYPE html>
<html>
<head>
  <title>Dev Match</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'https://js.stripe.com/v2/', type: 'text/javascript' %>
  <%= javascript_include_tag 'application' %>
  <%= tag 'meta', name: 'stripe-key', content: STRIPE_PUBLIC_KEY %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
        <i class="fa fa-users"></i>
        Dev Match    
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div class="nav navbar-nav navbar-right">
        <% if current_user %>
          <%= button_to 'Sign Out', destroy_user_session_path, class: 'btn btn-primary navbar-btn', method: :delete %>  
        <% else %>
          <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary navbar-btn', method: :get %>
          <!--<%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary navbar-btn', method: :get %>-->
        <% end %>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'About', about_path %></li>
        <li><%= link_to 'Contact Us', new_contact_path %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container" id="main-container">
  <% flash.each do |level, message| %>
    <%= content_tag :div, message, class: "alert alert-#{level}" %>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
