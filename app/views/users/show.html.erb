<div class="row">
	<% if @user.profile %>
		<div class="col-md-3 text-center profile-avatar">
			<%= image_tag @user.profile.avatar(:thumb) %><br>
		</div>
		<div class="col-md-6">
			<h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
			<h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
		
			<div class="well profile-description">
				<h3>Description</h3>
				<%= @user.profile.description %>
			</div>
			
			<div class="well contact-info">
				<% if true #current_user.plan_id == 2 %>
					<h3>Contact info</h3>
					<%= @user.profile.phone_number %><br>
					<%= @user.profile.contact_email %><br>
				<% end %>
			</div>
		</div>
	<% else %>
		<div class="alert alert-warning">
			The profile is not available yet!
		</div>
	<% end %>
</div>
